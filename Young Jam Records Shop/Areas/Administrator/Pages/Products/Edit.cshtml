@page
@model             EditModel
@{
    <form method="post">
        <input hidden asp-for="Product.Id"/>
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary pl-3">Add Album</h2>
                    <hr/>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.Title"></label>
                    <input asp-for="@Model.Product.Title" class="form-control"/>
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.Author"></label>
                    <input asp-for="@Model.Product.Author" class="form-control"/>
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Product.Price"></label>
                    <input asp-for="@Model.Product.Price" type="number" step="0.01" class="form-control"/>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
                <a asp-page="index" class="btn btn-outline-secondary" style="width:150px;">Back</a>
            </div>
    </form>
}

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
