@page
@model             IndexModel

<partial name="_Notification" />

@{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Album List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="upsert" class="btn btn-primary">
                    Add Album
                </a>
            </div>
        </div>
        <br/><br/>
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        EAN
                    </th>
                    <th>
                        Album Type
                    </th>
                    <th>
                        Case Type
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Edit/Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.Products)
                {
                    <tr>
                        <td width="30%">@obj.Title</td>
                        <td width="30%">@obj.Author</td>
                        <td width="30%">@obj.EAN</td>
                        <td width="30%">@obj.AlbumType.AlbumFormat</td>
                        <td width="30%">@obj.CaseType.Name</td>
                        <td width="20%">@obj.ListPrice.ToString("0.00")</td>
                        <td width="20%">
                            <div class="w-75 btn-group" role="group">
                                <a asp-page="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                                <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
