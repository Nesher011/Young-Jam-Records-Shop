@page
@model CreateModel
@{
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Add Album</h2>
                <hr/>
            </div>
            <div class="mb-3">
                <label asp-for="Product.Title"></label>
                <input asp-for="@Model.Product.Title" class="form-control"/>
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Product.Author"></label>
                <input asp-for="@Model.Product.Author" class="form-control" />
                <span asp-validation-for="Product.Author" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Product.ListPrice"></label>
                <input asp-for="@Model.Product.ListPrice" type="number" step="0.01" class="form-control"/>
                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Add</button>
        </div>
    </form>
}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
