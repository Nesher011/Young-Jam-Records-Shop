@page
@model             EditModel
@{
    <form method="post">
        <input hidden asp-for="AlbumType.Id" />
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary pl-3">Add Album Format</h2>
                    <hr/>
                </div>
                <div class="mb-3">
                    <label asp-for="AlbumType.Format"></label>
                <input asp-for="@Model.AlbumType.Format" class="form-control" />
                <span asp-validation-for="AlbumType.Format" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
                <a asp-page="index" class="btn btn-outline-secondary" style="width:150px;">Back</a>
            </div>
    </form>
}

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
