@page
@model Young_Jam_Records_Shop.Pages.Albums.DeleteModel
@{
    <form method="post">
    <input hidden asp-for="Album.Id"/>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Add Album</h2>
                <hr/>
            </div>
            <div class="mb-3">
                <label asp-for="Album.Name"></label>
                <input asp-for="@Model.Album.Name" class="form-control" disabled />                
            </div>
            <div class="mb-3">
                <label asp-for="Album.Author"></label>
                <input asp-for="@Model.Album.Author" class="form-control" disabled/>
            </div>
            <div class="mb-3">
                <label asp-for="Album.Price"></label>
                <input asp-for="@Model.Album.Price" type="number" step="0.01" class="form-control" disabled/>
            </div>
            <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
            <a asp-page="index" class="btn btn-outline-secondary" style="width:150px;">Back</a>
        </div>
    </form>
}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
