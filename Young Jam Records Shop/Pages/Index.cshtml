@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row pb-3">
    @foreach(var product in Model.ProductList)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p1" style="border:1px solid #008daa;border-radius:5px;">
                    <div class="card">
                        <img src="@product.CoverImageUrl" class="card-img-top rounded"/>
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@product.Title</p>
                            <p class="card-title text-secondary">@product.Author</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>